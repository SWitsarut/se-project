generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @unique @default(uuid())
  email       String  @unique
  displayName String
  password    String
  avatar      String?
  role        Role    @default(USER)
  isActive    Boolean @default(true)

  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
